pipeline {
    agent any

    environment {
        AWS_CREDENTIALS = credentials('62c39d7a-6bdc-474a-9d4f-7c379e3b7c9d')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Init Terraform') {
            steps {
                script {
                    sh 'terraform init'
                }
            }
        }

        stage('Apply Terraform') {
            steps {
                script {
                    sh 'terraform apply -auto-approve'
                }
            }
        }
        
        stage('Confirm Destroy') {
            steps {
                script {
                    def userInput = input(id: 'confirm', message: 'Deseja destruir os recursos do Terraform?', parameters: [ [$class: 'BooleanParameterDefinition', defaultValue: false, description: '', name: 'confirm'] ])
                    if (!userInput) {
                        error("Destruição de recursos cancelada pelo usuário.")
                    }
                }
            }
        }

        stage('Destroy Terraform') {
            when {
                expression { currentBuild.resultIsBetterOrEqualTo('SUCCESS') }
            }
            steps {
                script {
                    sh 'terraform destroy -auto-approve'
                }
            }
        }
    }
}



        stage('SSH to EC2') {
            steps {
                script {
                    // Substitua pelo comando que obtém o IP da instância EC2 do Terraform
                    def instanceIp = sh(script: 'terraform output instance_ip', returnStdout: true).trim()

                    sshagent(['18933e5f-ca4d-4751-a118-29381470793f']) {
                        sh "ssh -o StrictHostKeyChecking=no ec2-user@${instanceIp} echo 'Conectado com sucesso!'"
                    }
                }
            }
        }
    }
}
